<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MFTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/MFActionBarStyle</item>
        <item name="actionButtonStyle">@style/MFActionButton</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionOverflowButtonStyle">@style/Widget.Sherlock.ActionButton.Overflow</item>
        <item name="homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>
        <item name="actionBarTabStyle">@style/MFTabStyle</item>
        <item name="actionBarTabTextStyle">@style/MFGrayTextStyle</item>
    </style>

    <style name="MFActionBarStyle" parent="Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/actionbar_bg</item>
        <item name="titleTextStyle">@style/MFTitleTextStyle</item>
    </style>

    <style name="MFActionButton" parent="Widget.Sherlock.ActionButton">
        <item name="android:minWidth">52dp</item>
    </style>

    <style name="MFTabStyle" parent="Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator</item>
    </style>

    <style name="MFGrayTextStyle" parent="Widget.Sherlock.ActionBar.TabText">
        <item name="android:textColor">@color/tab_gray_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MFTitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>