<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#aabbbbbb"
             />
            <corners
                android:radius="2dp" />
            <padding
                android:left="6dp"
                android:top="5dp"
                android:right="6dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>
