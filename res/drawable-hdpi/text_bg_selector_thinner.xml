<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#aabbbbbb"
             />
            <corners
                android:radius="2dp" />
            <padding
                android:left="1dp"
                android:top="2dp"
                android:right="1dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>
