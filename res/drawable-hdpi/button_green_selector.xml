<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false" >	
        <shape>
    <gradient
        android:angle="270"
        android:endColor="#d0d0d0"
        android:startColor="#f3f3f3"
        android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#c0c0c0" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
	</item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#00744B"
             />
            <stroke
                android:width="1px"
                android:color="#227149" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid
                android:color="#00744B"
             />
            <stroke
                android:width="1px"
                android:color="#227149"/>
            <corners
                android:radius="4dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#33aD8F"
                android:endColor="#00744B"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="#227149" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="9dp"
                android:top="6dp"
                android:right="9dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>
