<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#dee6cf"
                android:endColor="#555555"
                android:startColor="#222222"
                android:centerY="0.6"
                android:type="linear" />

            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"
                android:topLeftRadius="0.1dp"
                android:topRightRadius="0.1dp" />
            </shape>
    </item>
    
    
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:centerColor="#44dee6cf"
                android:endColor="#99111111"
                android:startColor="#99111111"
                android:type="linear" />

            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"
                android:topLeftRadius="0.1dp"
                android:topRightRadius="0.1dp" />
        </shape>
    </item>
</layer-list>