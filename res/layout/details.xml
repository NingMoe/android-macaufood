<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_bg_portrait"
    android:orientation="vertical"
    android:paddingBottom="5dip"
    android:paddingLeft="7dip"
    android:paddingRight="7dip"
    android:paddingTop="7dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dip"
            android:shadowColor="#777777"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_body_bg"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingRight="5dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="@drawable/round_edge_white_bg"
            android:paddingBottom="10dip"
            android:paddingLeft="7dip"
            android:paddingRight="7dip"
            android:paddingTop="10dip" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="176dip"
                android:layout_height="120dip"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/delivery"
                android:layout_width="41dip"
                android:layout_height="32dip"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="9dip"
                android:layout_marginTop="3dip"
                android:scaleType="fitXY"
                android:src="@drawable/r_delivery" />

            <ImageView
                android:id="@+id/booking"
                android:layout_width="41dip"
                android:layout_height="32dip"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/delivery"
                android:scaleType="fitXY"
                android:src="@drawable/r_booking" />

            <ImageView
                android:id="@+id/midnight"
                android:layout_width="41dip"
                android:layout_height="32dip"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/booking"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="9dip"
                android:scaleType="fitXY"
                android:src="@drawable/r_midnight" />

            <ImageView
                android:id="@+id/party"
                android:layout_width="41dip"
                android:layout_height="32dip"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="9dip"
                android:layout_marginTop="3dip"
                android:scaleType="fitXY"
                android:src="@drawable/r_party" />

            <ImageView
                android:id="@+id/buffet"
                android:layout_width="41dip"
                android:layout_height="32dip"
                android:layout_alignParentRight="true"
                android:layout_below="@id/party"
                android:scaleType="fitXY"
                android:src="@drawable/r_buffet" />

            <ImageView
                android:id="@+id/banquet"
                android:layout_width="41dip"
                android:layout_height="32dip"
                android:layout_alignParentRight="true"
                android:layout_below="@id/buffet"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="9dip"
                android:scaleType="fitXY"
                android:src="@drawable/r_banquet" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <ImageView
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/d_intro" />

            <ImageView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/d_info" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/d_menu" />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/round_edge_white_bg" >

            <LinearLayout
                android:id="@+id/infoLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="3dip" >

                <LinearLayout
                    android:id="@+id/addrRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent_selector_bg"
                    android:gravity="center_vertical"
                    android:minHeight="50dip"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="78dip"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dip"
                        android:text="@string/addr"
                        android:textColor="@color/green_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/addr"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dip"
                        android:paddingRight="8dip"
                        android:src="@drawable/arrow3" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@android:drawable/divider_horizontal_bright" />

                <LinearLayout
                    android:id="@+id/phoneRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent_selector_bg"
                    android:gravity="center_vertical"
                    android:minHeight="40dip"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="78dip"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dip"
                        android:text="@string/phone"
                        android:textColor="@color/green_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dip"
                        android:paddingRight="8dip"
                        android:src="@drawable/arrow3" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@android:drawable/divider_horizontal_bright" />

                <LinearLayout
                    android:id="@+id/websiteRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent_selector_bg"
                    android:gravity="center_vertical"
                    android:minHeight="40dip"
                    android:orientation="horizontal"
                    android:padding="3dip"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="78dip"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dip"
                        android:text="@string/website"
                        android:textColor="@color/green_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/website"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dip"
                        android:paddingRight="8dip"
                        android:src="@drawable/arrow3" />
                </LinearLayout>

                <View
                    android:id="@+id/websiteRowSep"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@android:drawable/divider_horizontal_bright"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
      	  	  		android:clipToPadding="false"
	  	  		    android:clipChildren="false"
                    android:orientation="horizontal"
                    android:padding="3dp" >

                    <TextView
                        android:layout_width="78dip"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dip"
                        android:text="@string/paymentMethod"
                        android:textColor="@color/green_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/cash"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cash"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <GridView
                        android:id="@+id/paymentGrid"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
		  	  			android:clipChildren="false"
						android:scrollbars="none"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:numColumns="4"
                        android:paddingBottom="3dip"
                        android:paddingTop="3dip"
                        android:verticalSpacing="3dp"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@android:drawable/divider_horizontal_bright" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="78dip"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:text="@string/businessHours"
                        android:textColor="@color/green_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/businessHours"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@android:drawable/divider_horizontal_bright" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="78dip"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:text="@string/info"
                        android:textColor="@color/green_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/infoText"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>