<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="80dip">
  
  <ImageView 
  		android:id="@+id/imageView"
	    android:layout_width="106dip"
	    android:layout_height="80dip"/>
  		
  <TextView 
  		android:id="@+id/name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="18sp"
	    android:textColor="#000000"
	    android:layout_toRightOf="@id/imageView"
	    android:paddingTop="8dip"
	    android:paddingBottom="10dip"
	    android:paddingLeft="9dip"
	    android:paddingRight="7dip"
	    android:singleLine="true"
	    android:shadowDy="1"
	    android:shadowColor="#999999"
	    android:shadowRadius="1"
	    android:ellipsize="marquee"
	    />
	    
  <ImageView 
  		android:id="@+id/delivery"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:src="@drawable/c_delivery"
	    android:layout_below="@id/name"
	    android:layout_toRightOf="@id/imageView"
	    android:layout_marginLeft="6dip"
	    />
	    
  <ImageView 
  		android:id="@+id/booking"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:src="@drawable/c_booking"
	    android:layout_below="@id/name"
	    android:layout_toRightOf="@id/delivery"
	    android:layout_marginLeft="4dip"
	    />
	    
  <ImageView 
  		android:id="@+id/midnight"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:src="@drawable/c_midnight"
	    android:layout_below="@id/name"
	    android:layout_toRightOf="@id/booking"
	    android:layout_marginLeft="4dip"
	    />
	    
  <ImageView 
  		android:id="@+id/party"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:src="@drawable/c_party"
	    android:layout_below="@id/name"
	    android:layout_toRightOf="@id/midnight"
	    android:layout_marginLeft="4dip"
	    />
	    
  <ImageView 
  		android:id="@+id/buffet"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:src="@drawable/c_buffet"
	    android:layout_below="@id/name"
	    android:layout_toRightOf="@id/party"
	    android:layout_marginLeft="4dip"
	    />
	    
  <ImageView 
  		android:id="@+id/banquet"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:src="@drawable/c_banquet"
	    android:layout_below="@id/name"
	    android:layout_toRightOf="@id/buffet"
	    android:layout_marginLeft="4dip"
	    />
  		
    
</RelativeLayout>
