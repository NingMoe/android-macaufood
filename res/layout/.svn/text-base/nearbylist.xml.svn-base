<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  	xmlns:mf="http://schemas.android.com/apk/res/com.cycon.macaufood"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#DDDDDD">
  
  
	<TextView 
		android:id="@+id/searchResultsNumber"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:textSize="18sp"
		android:textColor="#555555"
		android:paddingTop="10dip"
		android:textStyle="bold"
	    android:layout_marginTop="34dip"
		/>
		
	  <com.cycon.macaufood.widget.AdvView
  		android:id="@+id/banner"
	    android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:scaleType="fitXY"
		android:background="#FFFFFF"
		mf:small="true"
		android:layout_alignParentBottom="true"/>
  
  <ListView
  	  android:id="@+id/list"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_marginTop="34dip"
	  android:layout_above="@id/banner"/>
	  
		
		
	  <TextView 
	  	android:id="@+id/header"
		android:layout_width="fill_parent"
		android:layout_height="40dip"
		android:paddingBottom="5dip"
		android:textSize="18sp"
		android:gravity="center"
		android:paddingLeft="5dip"
		android:paddingRight="5dip"
		android:ellipsize="marquee"
		android:singleLine="true"
		android:textColor="#FFFFFF"
		android:background="@drawable/intro_header_shadow"
	    android:shadowColor="#000000"
	    android:shadowDy="1.5"
	    android:shadowRadius="1"
	    android:textStyle="bold"
	    android:text="@string/restList"
		/>
    
</RelativeLayout>
