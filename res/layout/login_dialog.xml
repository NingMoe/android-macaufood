<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/fbLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="@string/facebookLogin"
        android:textSize="18sp"
        android:background="@drawable/transparent_selector_bg"
        android:paddingLeft="16dp"
        android:visibility="gone"
        />
    
        <com.facebook.widget.LoginButton
            xmlns:facebook="http://schemas.android.com/apk/res-auto"
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            facebook:confirm_logout="true"
            facebook:fetch_user_info="true"
            facebook:login_text="@string/facebookLogin"
            facebook:logout_text="LOG OUT"
            />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:drawable/divider_horizontal_bright"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/weiboLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="@string/weiboLogin"
        android:background="@drawable/transparent_selector_bg"
        android:paddingLeft="16dp"
        android:textSize="18sp"
        />

</LinearLayout>