<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/app_bg_portrait"
  android:paddingTop="7dip"
  android:paddingBottom="5dip"
  android:paddingLeft="7dip"
  android:paddingRight="7dip">
  
  <RelativeLayout 
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:background="@drawable/header_bar"
		  android:orientation="horizontal">
  
	  <TextView
	  		android:id="@+id/name"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:textColor="#FFFFFF"
		  android:textSize="21sp"
		  android:gravity="center_horizontal"
		  android:padding="5dip"
		  
	    android:shadowColor="#777777"
	    android:shadowDy="1.5"
	    android:shadowDx="1.5"
	    android:shadowRadius="1"
		  />
	  
	  </RelativeLayout>
	  
   <LinearLayout 
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:background="@drawable/detail_body_bg"
	  android:paddingLeft="5dip" android:paddingRight="5dip">
	  
	  <RelativeLayout
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
	  	  android:background="@drawable/round_edge_white_bg"
	  	  android:paddingTop="13dip"
	  	  android:paddingBottom="13dip"
	  	  android:paddingRight="10dip"
	  	  android:paddingLeft="10dip"
	  	  android:layout_marginLeft="2dip"
	  	  android:layout_marginRight="2dip">
	  	  
	  	  <ImageView
	  	  	android:id="@+id/image"
		    android:layout_width="194dip"
		    android:layout_height="132dip"
		    android:layout_centerHorizontal="true"
		    android:scaleType="fitXY"/>
			
			<ImageView
				android:id="@+id/delivery"	
		        android:layout_width="44dip"
		        android:layout_height="32dip"
		        android:layout_marginTop="3dip"
		        android:layout_marginBottom="12dip"
		        android:layout_alignParentLeft="true"
		        android:src="@drawable/r_delivery" 
		        android:scaleType="fitXY"/>	
			
			<ImageView
				android:id="@+id/booking"	
		        android:layout_width="44dip"
		        android:layout_height="34dip"
		        android:layout_below="@id/delivery" 
		        android:layout_alignParentLeft="true"
		        android:src="@drawable/r_booking" 
		        android:scaleType="fitXY"/>	    
			
			<ImageView
				android:id="@+id/midnight"	
		        android:layout_width="44dip"
		        android:layout_height="34dip"
		        android:layout_below="@id/booking"
		        android:layout_marginBottom="3dip"
		        android:layout_marginTop="12dip"
		        android:layout_alignParentLeft="true"
		        android:src="@drawable/r_midnight" 
		        android:scaleType="fitXY" />	
			
			<ImageView
				android:id="@+id/party"	
		        android:layout_width="44dip"
		        android:layout_height="34dip"
		        android:layout_marginTop="3dip"
		        android:layout_marginBottom="12dip"
		        android:layout_alignParentRight="true"
		        android:src="@drawable/r_party"
		        android:scaleType="fitXY" />	
			
			<ImageView
				android:id="@+id/buffet"	
		        android:layout_width="44dip"
		        android:layout_height="34dip"
		        android:layout_below="@id/party" 
		        android:layout_alignParentRight="true"
		        android:src="@drawable/r_buffet"
		        android:scaleType="fitXY" />	    
			
			<ImageView
				android:id="@+id/banquet"	
		        android:layout_width="44dip"
		        android:layout_height="34dip"
		        android:layout_below="@id/buffet"
		        android:layout_marginBottom="3dip"
		        android:layout_marginTop="12dip"
		        android:layout_alignParentRight="true"
		        android:src="@drawable/r_banquet" 
		        android:scaleType="fitXY" />	        
				
	  	  
		</RelativeLayout>
		
		
	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:paddingTop="8dip"
		android:paddingBottom="8dip"
		>	
		
		<ImageView 
			android:id="@+id/intro"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/d_intro"
			/>
		
		<ImageView 
			android:id="@+id/info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/d_info"
			/>
		
		<ImageView
			android:id="@+id/menu"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/d_menu"
			/>
	
	</LinearLayout>
	
	<ScrollView
		  android:layout_width="fill_parent"
		  android:layout_height="0dip"
		  android:layout_weight="1"
		  android:layout_marginLeft="2dp"
		  android:layout_marginRight="2dp"
		  android:layout_marginBottom="8dp"
	  	  android:background="@drawable/round_edge_white_bg"
		  >
	
	<LinearLayout
		  android:id="@+id/infoLayout"
		  android:orientation="vertical"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
	  	  android:paddingBottom="3dip">
	  	  
	  	  <LinearLayout
	  	  		android:id="@+id/addrRow"
	  	  		android:orientation="horizontal"
	  	  		android:layout_width="fill_parent"
	  	  		android:layout_height="wrap_content"
	  	  		android:gravity="center_vertical"
	  	  		android:minHeight="50dip"
	  	  		android:padding="3dip"
	  	  		android:background="@drawable/transparent_selector_bg">
	  	  		
	  	  		<TextView 
	  	  			android:layout_width="85dip"
	  	  			android:layout_height="wrap_content" 
	  	  			android:text="@string/addr"
	  	  			android:textColor="@color/green_text"
	  	  			android:textSize="17sp"
	  	  			android:paddingLeft="3dip"
	  	  			
	  	  			
	  	  			/>
	  	  		<TextView 
	  	  			android:id="@+id/addr"
	  	  			android:layout_width="0dip"
	  	  			android:layout_height="wrap_content" 
	  	  			android:layout_weight="1"
	  	  			android:textColor="#000000"
	  	  			android:textSize="17sp"
	  	  			
	  	  			/>
	  	  		<ImageView
	  	  			android:layout_width="wrap_content"
	  	  			android:layout_height="wrap_content" 
	  	  			android:src="@drawable/gray_arrow"
	  	  			android:paddingLeft="5dip"
	  	  			android:paddingRight="8dip"
	  	  			/>
	  	  
	  	  </LinearLayout>
	  	  
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@android:drawable/divider_horizontal_bright"
                />
	  	  
	  	  <LinearLayout
	  	  		android:id="@+id/phoneRow"
	  	  		android:orientation="horizontal"
	  	  		android:layout_width="fill_parent"
	  	  		android:layout_height="wrap_content"
	  	  		android:gravity="center_vertical"
	  	  		android:minHeight="40dip"
	  	  		android:padding="3dip"
	  	  		android:background="@drawable/transparent_selector_bg">
	  	  		
	  	  		<TextView 
	  	  			android:layout_width="85dip"
	  	  			android:layout_height="wrap_content" 
	  	  			android:textColor="@color/green_text"
	  	  			android:textSize="17sp"
	  	  			android:text="@string/phone"
	  	  			android:paddingLeft="3dip"
	  	  			/>
	  	  		<TextView 
	  	  			android:id="@+id/phone"
	  	  			android:layout_width="0dip"
	  	  			android:layout_height="wrap_content" 
	  	  			android:layout_weight="1"
	  	  			android:textColor="#000000"
	  	  			android:textSize="17sp"
	  	  			/>
	  	  		<ImageView
	  	  			android:layout_width="wrap_content"
	  	  			android:layout_height="wrap_content" 
	  	  			android:src="@drawable/gray_arrow"
	  	  			android:paddingLeft="5dip"
	  	  			android:paddingRight="8dip"
	  	  			/>
	  	  
	  	  </LinearLayout>
	  	  
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@android:drawable/divider_horizontal_bright"
                />
	  	  
	  	  <LinearLayout
	  	  		android:id="@+id/websiteRow"
	  	  		android:orientation="horizontal"
	  	  		android:layout_width="fill_parent"
	  	  		android:layout_height="wrap_content"
	  	  		android:gravity="center_vertical"
	  	  		android:minHeight="40dip"
	  	  		android:padding="3dip"
	  	  		android:visibility="gone"
	  	  		android:background="@drawable/transparent_selector_bg">
	  	  		
	  	  		<TextView 
	  	  			android:layout_width="85dip"
	  	  			android:layout_height="wrap_content" 
	  	  			android:textColor="@color/green_text"
	  	  			android:textSize="17sp"
	  	  			android:text="@string/website"
	  	  			android:paddingLeft="3dip"
	  	  			/>
	  	  		<TextView 
	  	  			android:id="@+id/website"
	  	  			android:layout_width="0dip"
	  	  			android:layout_height="wrap_content" 
	  	  			android:layout_weight="1"
	  	  			android:textColor="#000000"
	  	  			android:textSize="17sp"
	  	  			/>
	  	  		<ImageView
	  	  			android:layout_width="wrap_content"
	  	  			android:layout_height="wrap_content" 
	  	  			android:src="@drawable/gray_arrow"
	  	  			android:paddingLeft="5dip"
	  	  			android:paddingRight="8dip"
	  	  			/>
	  	  
	  	  </LinearLayout>
	  	  
	  	  <View 
	  	  		android:id="@+id/websiteRowSep"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@android:drawable/divider_horizontal_bright"
	  	  		android:visibility="gone" />
	  	  
	  	  <LinearLayout
	  	  		android:orientation="horizontal"
	  	  		android:layout_width="fill_parent"
	  	  		android:layout_height="wrap_content"
	  	  		android:gravity="center_vertical"
	  	  		android:clipToPadding="false"
	  	  		android:clipChildren="false"
	  	  		android:padding="3dp">
	  	  		
	  	  		<TextView 
	  	  			android:layout_width="85dip"
	  	  			android:layout_height="wrap_content" 
	  	  			android:textColor="@color/green_text"
	  	  			android:textSize="17sp"
	  	  			android:text="@string/paymentMethod"
	  	  			android:paddingLeft="3dip"
	  	  			/>
	  	  			
	  	  		<TextView 
	  	  			android:id="@+id/cash"
	  	  			android:layout_width="0dip"
	  	  			android:layout_height="wrap_content" 
	  	  			android:layout_weight="1"
	  	  			android:textColor="#000000"
	  	  			android:textSize="17sp"
	  	  			android:text="@string/cash"
	  	  			/>
	  	  			
  	  			<GridView 
  	  				android:id="@+id/paymentGrid"
					android:layout_width="200dp" 
					android:layout_height="wrap_content"
		  	  		android:clipToPadding="false"
		  	  		android:clipChildren="false"
					android:scrollbars="none"
				    android:verticalSpacing="3dp"
				    android:horizontalSpacing="5dp"
				    android:numColumns="4"
				    android:gravity="center_vertical"
				    android:layout_gravity="center_vertical"
	  	  			android:visibility="gone"
	  	  			android:paddingTop="3dp"
	  	  			android:paddingBottom="3dp"
				    />
	  	  
	  	  </LinearLayout>
	  	  
	  	  <View 
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@android:drawable/divider_horizontal_bright" />
	  	  
	  	  <LinearLayout
	  	  		android:orientation="horizontal"
	  	  		android:layout_width="fill_parent"
	  	  		android:layout_height="wrap_content"
	  	  		android:gravity="center_vertical"
	  	  		android:padding="3dip">
	  	  		
	  	  		<TextView 
	  	  			android:layout_width="85dip"
	  	  			android:layout_height="wrap_content" 
	  	  			android:textColor="@color/green_text"
	  	  			android:textSize="17sp"
	  	  			android:text="@string/businessHours"
	  	  			android:paddingLeft="3dp"
	  	  			/>
	  	  		<TextView 
	  	  			android:id="@+id/businessHours"
	  	  			android:layout_width="0dip"
	  	  			android:layout_height="wrap_content" 
	  	  			android:layout_weight="1"
	  	  			android:textColor="#000000"
	  	  			android:textSize="17sp"
	  	  			/>
	  	  
	  	  </LinearLayout>
	  	  
	  	  <View 
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@android:drawable/divider_horizontal_bright" />
	  	  
	  	  <LinearLayout
	  	  		android:orientation="horizontal"
	  	  		android:layout_width="fill_parent"
	  	  		android:layout_height="wrap_content"
	  	  		android:gravity="center_vertical"
	  	  		android:padding="3dip">
	  	  		
	  	  		<TextView 
	  	  			android:layout_width="85dip"
	  	  			android:layout_height="wrap_content" 
	  	  			android:textColor="@color/green_text"
	  	  			android:textSize="17sp"
	  	  			android:paddingLeft="3dp"
	  	  			android:text="@string/info"
	  	  			/>
	  	  		<TextView 
	  	  			android:id="@+id/infoText"
	  	  			android:layout_width="0dip"
	  	  			android:layout_height="wrap_content" 
	  	  			android:layout_weight="1"
	  	  			android:textColor="#000000"
	  	  			android:textSize="17sp"
	  	  			/>
	  	  
	  	  </LinearLayout>
		
		</LinearLayout>
		
		</ScrollView>
		
	  
   </LinearLayout>
    
</LinearLayout>
