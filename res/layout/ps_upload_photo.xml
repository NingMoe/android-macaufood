<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray_bg"
    android:padding="12dp" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edge_selector"
        android:orientation="horizontal"
        android:padding="12dp" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grid_image_bg9" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <EditText
            android:id="@+id/captionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:hint="@string/addCaption" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/round_edge_selector"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:clickable="true"
        >
	
        <TextView
            android:id="@+id/cafeName"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceMedium"
            android:drawableRight="@drawable/arrow3"
	        android:text="@string/chooseCafe" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/round_edge_selector"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:clickable="true"
        >
	
        <TextView
            android:id="@+id/cafeName"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:text="@string/chooseCafe" />
        
    </LinearLayout>

</LinearLayout>
